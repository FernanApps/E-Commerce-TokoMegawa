<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Light" parent="@style/Theme.Design.Light.NoActionBar">
        <!-- Personaliza aquí el color de fondo y del texto -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">@color/purple_200</item>
    </style>



    <style name="AppTheme.Dark" parent="@style/Theme.Material3.Dark.NoActionBar">
        <!-- Personaliza aquí el color de fondo y del texto en modo oscuro -->
        <item name="android:windowBackground">#3D4143</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="discover_yo">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="explore_all">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>



    <attr name="sc_corner_radius" format="dimension" />
    <attr name="sc_border_width" format="dimension" />
    <attr name="sc_tint_color" format="color" />
    <attr name="sc_checked_text_color" format="color" />

    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D3D3D3</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSurface">@color/black</item>
    </style>
</resources>

