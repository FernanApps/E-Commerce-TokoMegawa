<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="188dp"
    android:layout_height="280dp"
    >

    <LinearLayout
        android:layout_width="161dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ImgView_hotSales"
            android:layout_width="110dp"
            android:layout_height="114dp"
            android:scaleType="centerCrop"
            android:src="@drawable/frame_headphone" />

    </LinearLayout>

    <TextView
        android:id="@+id/textTView_Titulo_HotSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="166dp"
        android:text="Titulo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescripcionHotSales"
        android:layout_width="174dp"
        android:layout_height="32.5dp"
        android:layout_below="@+id/textTView_Titulo_HotSales"
        android:layout_marginStart="17dp"
        android:layout_marginTop="4dp"
        android:text="Decripcion"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPrecioHotSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDescripcionHotSales"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:text="$ 3000"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>

